<!doctype html>
<html lang="en">

<head>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
     <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link
      rel="stylesheet"
      href="https://bootswatch.com/4/journal/bootstrap.min.css"
    />
    <script src="https://kit.fontawesome.com/b68197f8e1.js" crossorigin="anonymous"></script>
    <link href="/CSS/main.css" rel="stylesheet" type="text/css">
    <link href="/CSS/util.css" rel="stylesheet" type="text/css">
    <link href="/CSS/style.css" rel="stylesheet" type="text/css">

    <link href="https://fonts.googleapis.com/css?family=Orbitron" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono&display=swap" rel="stylesheet">
    <link rel="icon" href="Assets/imgs/favicon.webp" type="image/gif" sizes="25x25">
    <style>
      .err{
        border: 1px solid rgb(46, 46, 46);
      padding: 5px 18px;
      border-radius: 10px;
      
      }
    </style>
</head>

<body>
  <!-- Registration page -->
  <div class="limiter">

    <div class="container-login100">
      <a href="/" class="cross">
        <i class="far fa-times-circle"></i>
      </a>
      <div class="wrap-login100">
        <div class="login100-form-title" style="background-image: url('https://images.pexels.com/photos/531880/pexels-photo-531880.jpeg?auto=compress&cs=tinysrgb&dpr=2&w=500');">
          <span class="login100-form-title-1">
            Sign up
          </span>
        </div>
        <form class="login100-form validate-form" action="/register" method="POST">
          <% if(error.length > 0) { %>
            <%=console.log("abc")%>
            <div class="mb-3">
            <p class="err"  style="color:red;background: #ffcccc57;">
              <%= error %>
            </p>
          </div>
            <% } %>
          <div class="wrap-input100 validate-input m-b-26" >
            <label class="label-input100" for="name">Name</label>
            <input
              type="name"
              id="name"
              name="playerName"
              class="input100"
              placeholder="Deeksha Sharma"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
            <span class="focus-input100">
            </span>
          </div>
          <div class="wrap-input100 validate-input m-b-26">
            <label class="label-input100" >Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="input100"
              placeholder="18XXXX@nith.ac.in"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
            <span class="focus-input100">
            </span>
          </div>

          <div class="wrap-input100 validate-input m-b-26">
            <label class="label-input100" for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="input100"
              placeholder="*********"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
            <span class="focus-input100">
            </span>
          </div>
          <div class="wrap-input100 validate-input m-b-26">
            <input type="text" hidden name="_csrf" value="<%=csrfToken%>">
          <button type="submit" class="login100-form-btn">
            Register
          </button>
        </form>
        <p style="text-align: left;padding-top: 20px;" class="choice">Have An Account? <a class="reg_choice" href="/login">Login</a></p>
      </div>
    </div>
  </div>


  <!--Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
    crossorigin="anonymous"></script>
  <script src="JS/base.js"></script>
  <script type="text/javascript" src="JS/register.js"></script>
</body>

</html>